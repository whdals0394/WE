<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="30dp" />

    <gradient
        android:angle="45"
        android:centerColor="#c74017"
        android:centerX="50%"
        android:endColor="#d48e8e"
        android:startColor="#d48e8e"
        android:type="linear" />

    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <stroke
        android:width="3dp"
        android:color="#d4d1d1" />
</shape>